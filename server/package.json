{
  "name": "server",
  "version": "1.0.0",
  "description": "todo app",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "start:test": "NODE_ENV=test ts-node-dev src/index.ts",
    "start:postgres": "docker-compose down && docker-compose up -d --build",
    "dev": "npm run start:postgres && npm run dev:nodb",
    "dev:nodb": "NODE_ENV=development ts-node-dev src/index.ts",
    "build:ui": "rm -rf build && cd ../client/ && npm run build && cp -ar build ../server/",
    "build:both": "npm run build:ui && npm run tsc",
    "lint": "eslint --ext .ts .",
    "test": "npm run start:postgres && NODE_ENV=test jest --verbose --runInBand"
  },
  "author": "Sandesh Hyoju",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie": "^0.4.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.10",
    "@types/supertest": "^2.0.11",
    "@types/umzug": "^2.3.3",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "jest": "^27.4.7",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "sequelize": "^6.13.0",
    "umzug": "^3.0.0"
  }
}
